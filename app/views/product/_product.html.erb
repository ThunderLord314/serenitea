<div class="product">
	<% if product.image.present? %>
		<p>
			<%= image_tag product.image.resized.url %>
		</p>
	<% end %>
	<h2>
		<%= link_to product.name, product %>
	</h2>
	<p>
		<b>Description: </b><%= product.description %>
	</p>
	<p>
		<b>Quantity in Stock: </b><%= product.quantity %>
	</p>
	<p>
		<b>Price: </b>$<%= product.price %>
	</p>
	<p>
		<b>Category: </b><%= link_to product.category.name, controller: "category", action: "show", id: product.category %>
	</p>
</div>
